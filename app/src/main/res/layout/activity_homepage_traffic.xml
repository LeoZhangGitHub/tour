<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FCFCFC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_button">

        <TextView
            android:id="@+id/traffic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/head_img"
            android:gravity="center_horizontal"
            android:text="淮南到上海 "
            android:textColor="@color/cyan"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/traffic_price"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/traffic_title"
            android:padding="10dp"
            android:paddingTop="30dp"
            android:text="RMB:200"
            android:textColor="@color/bg_black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_traffic_reserve"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/traffic_price"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:background="@drawable/shape_button"
            android:textColor="@color/cyan"
            android:textSize="25dp"
            android:text="预定" />

    </RelativeLayout>

</LinearLayout>