<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FCFCFC">

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_beginTime"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="52dp"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text="开始时间"
        android:textColor="@color/bg_black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText_beginTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText_endTime"
        android:layout_alignBottom="@+id/editText_endTime"
        android:layout_alignStart="@+id/textView"
        android:background="@drawable/shape_edittext"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:textColor="@color/bg_black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="44dp"
        android:layout_toEndOf="@+id/textView"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text="结束时间"
        android:textColor="@color/bg_black"
        android:textSize="20dp"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/editText_endTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="235dp"
        android:background="@drawable/shape_edittext"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:textColor="@color/bg_black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_hotel_reserve"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText_beginTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/shape_button"
        android:text="预定"
        android:textColor="@color/cyan"
        android:textSize="25dp" />

</RelativeLayout>